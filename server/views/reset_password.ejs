<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <%- include('admin_alert/alert'); -%>
            <form method="POST" action="<%= locals.req.originalUrl %>" target="_self" class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="#" class="">
                        <h3 style="text-align: end;" class="text-primary"><i class="fa fa-hashtag me-2"></i>TCaPP</h3>
                    </a>
                    <h3>Reset Password</h3>
                </div>
                <div class="form-floating mb-4">
                    <input value="<%= locals.data.newPassword||"" %>" name="new_password" type="password" class="form-control" id="floatingPasswordLogin" placeholder="Password">
                    <label for="floatingPassword">New Password</label>
                </div>
                <div class="form-floating mb-4">
                    <input value="<%= locals.data.confirmNewPassword||"" %>" name="confirm_new_password" type="password" class="form-control"
                        id="floatingPasswordLogin" placeholder="Password">
                    <label for="floatingPassword">Confirm New Password</label>
                </div>
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Reset Password</button>
            </form>
        </div>
    </div>
</div>